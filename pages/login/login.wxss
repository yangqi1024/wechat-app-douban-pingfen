.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 30rpx;
}

.logo{
    width:200rpx;
    height: 200rpx;
    margin: 40rpx 0;
}
.btn-login{
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
    text-align: center;
}

.wxlogin{
    background-color: #42BD55;
    color: #fff;
    margin-bottom: 30rpx;
}
.doubanlogin{
    background-color: #fff;
    color: #42BD55;
    border: 2rpx solid #42BD55;
}

.agreement{
    color: #9D9D9D;
    font-size: 24rpx;
    display: flex;
    position: absolute;
    bottom: 50rpx;
}

.agreement .open{
    margin-left: 10rpx;
    color: #4BB65C;
}