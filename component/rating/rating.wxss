/* component/rating/rating.wxss */
.rating-wrapper {
  display: flex;
  justify-content: center;
}
.rating-detail-wrapper {
  display: flex;
  flex-direction: column;
}
.rating-detail {
  display: flex;
  align-items: center;
  height: 15rpx;
  margin-bottom: 2rpx;
}
.star-wrapper {
  display: flex;
  justify-items: flex-end;
}
.star-wrapper image {
width: 20rpx;
  height: 20rpx;
}

.star-wrapper .hide-star {
  visibility: hidden;
}

.rectangle {
  height: 100%;
  position: relative;
  margin-left: 10rpx;
}

.rectangle .bottom {
  background-color: #f5f5f5;
  height: 100%;
  line-height: 100%;
}

.rectangle .top {
  background-color: #ffac2c;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.rating-detail .percent{
    color: #C6C6C6;
    margin-left: 10rpx;
    height: 100%;
    font-size: 14rpx;
}

.average-wrapper{
    display: flex;
    flex-direction: column;
}

.average-wrapper .average{
    font-size: 60rpx;
    font-weight: bold;
}
