.container{
    margin: 30rpx 30rpx 0 30rpx;
}

.rating-wrapper .title-wrapper{
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30rpx;
}

.rating-wrapper  .title-wrapper .title{
    font-size: 36rpx;
    font-weight: bold;
}

.rating-wrapper .title-wrapper .arrow{
    width: 12rpx;
    height: 12rpx;
    border: 2px solid #7E7E7E;
    border-left: none;
    border-top: none;
    transform: rotate(-45deg);
}
.rating-wrapper  .rating-info{
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 40rpx;
}
.rating-wrapper  .rating-info .average-wrapper{
    display: flex;
    flex-direction: column;
    align-content: center;
}

.rating-wrapper  .rating-info .average-wrapper .average{
    font-size: 40rpx;
    font-weight: bold;
    text-align: center;
}

.comment-wrapper{
    background-color: #fff;
    border-radius: 20rpx;
    margin-top: 50rpx;
}

.comment-wrapper .title-wrapper{
    display: flex;
    align-items: flex-end;
    margin-bottom: 30rpx;
}

.comment-wrapper .title-wrapper .title{
    font-size: 36rpx;
font-weight: bold;
}

.comment-wrapper .title-wrapper .count{
    display: flex;
    color: #7F7F7F;
    font-size: 24rpx;
}