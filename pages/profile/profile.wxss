/* pages/profile/profile.wxss */
.login-wrapper{
    height: 400rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.login-wrapper .login{
    color: #1E4826;
    background-color: #fff;
    height: 100rpx;
    width: 300rpx;
    line-height: 100rpx;
    border-radius: 50rpx;
    font-size: 50rpx;
    text-align: center;
}

.login-wrapper image{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.version{
    position: absolute;
    bottom: 30rpx;
    width: 100%;
    color: #c9c9c9;
    font-size: 24rpx;
    text-align: center;
}