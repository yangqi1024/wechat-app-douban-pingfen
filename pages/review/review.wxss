.review-wrapper{
    padding:30rpx 30rpx;
}

.review-wrapper .title{
    font-size: 36rpx;
    font-weight: bold;
    margin-bottom: 30rpx;
}

.review-wrapper .title-wrapper{
    display: flex;
    justify-content: flex-start;
    margin-bottom: 20rpx;
    margin-left: 30rpx;

}



.review-wrapper  .author{
    display: flex;
    align-items: center;
    padding-top: 20rpx;
    margin-bottom: 50rpx;
}

.review-wrapper  .author .avatar{
    width: 50rpx;
    height: 50rpx;
    border-radius: 25rpx;
    margin-right: 10rpx;
}



.review-wrapper  .review{
    font-size: 32rpx;
    padding-bottom: 20rpx;
}

.review-wrapper  .author .info .name{
    color: #848484;
    font-size: 28rpx;
    margin-right: 10rpx;
}

.review-wrapper  .author .info .date-star{
    color:#7E7E7F;
    font-size: 22rpx;
    display: flex;
    align-items: center;
}