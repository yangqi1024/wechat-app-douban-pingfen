/* pages/profile/profile.wxss */
.login-wrapper{
    height: 400rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.login-wrapper .login{
    color: #1E4826;
    background-color: #fff;
    height: 100rpx;
    width: 350rpx;
    line-height: 100rpx;
    border-radius: 50rpx;
    font-size: 46rpx;
    text-align: center;
    box-shadow: 2rpx 2rpx 10rpx 0 rgba(0, 0, 0, 0.2);
}

.login-wrapper image{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.version{
    position: absolute;
    bottom: 30rpx;
    width: 100%;
    color: #c9c9c9;
    font-size: 24rpx;
    text-align: center;
}

.items-wrapper{
    margin-top: 30rpx;
}

.items-wrapper .title-wrapper{
    display: flex;
    justify-content: space-between;
    margin-left: 20rpx;
    margin-right: 40rpx;
    margin-bottom: 30rpx;
}

.items-wrapper .title-wrapper .title{
    font-weight: bold;
    font-size: 32rpx;
}

.items-wrapper .title-wrapper .view{
    display: flex;
    align-items: center;
}

.items-wrapper .arrow{
    width: 26rpx;
    height: 26rpx;
    border: 2px solid #7F7F7F ;
    border-left: none;
    border-top: none;
    transform: rotate(-45deg);
}

.items-wrapper .items .item{
    display: flex;
    align-items: center;
    margin-top: 20rpx;
    padding-left: 20rpx;
}

.item image{
    width: 80rpx;
    height: 80rpx;
}

.item .info-wrapper{
    width: 100%;
    margin-right: 20rpx;
}

.item .info{
    display: flex;
}

.item .info .left{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex-grow: 1;
    margin-left: 20rpx;

}

.item .info .top{
    font-size: 32rpx;
}

.item .info .bottom{
    display: flex;
    color: #818181;
    align-items: flex-end;
}

.item .info .bottom .count{
    font-size: 60rpx;
    margin-right: 10rpx;
}

.item .info .bottom .text{
    margin-right: 10rpx;
    margin-bottom: 10rpx;
}

.item .info .right{
    display: flex;
    font-size: 20rpx;
    justify-content: space-between;
    align-items: center;
    margin-left: 50rpx;
    margin-right: 20rpx;

}

.item .info .right .text{
    margin-right: 80rpx;
    color: #C1C1C1;
}

.item .info .begin-wrapper{
    display: flex;
    align-items: center;
}

.item .info .begin-wrapper .begin{
    color: #4A4A4A;
    background-color: #F5F5F5;
    border-radius: 10rpx;
    padding: 10rpx 15rpx;
}


.item .info-wrapper .divider{
    width: 100%;
    height: 2rpx;
    background-color: rgba(0, 0, 0, 0.1);
    margin-top: 15rpx;
}